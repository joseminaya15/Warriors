	width 100%
	max-width calc(100% - 225px)
.js-card
	background-color #FFFFFF
	box-shadow 0 2px 5px rgba(0,0,0,0.16), 0 2px 5px rgba(0,0,0,0.23)
	padding 20px
.js-partners
	img
		max-width 250px
		margin 15px
#logistic
	background-color #614767
#register
	background-color #90A878
/*MODAL*/
.modal
	&.fade
		.modal-dialog
			transform translate(-50% , -50%)
			position absolute
			top 50%
			left 50%
			.mdl-card__actions
				padding 16px
				button
					text-transform initial
					font-family $medium
		&.in
			.modal-dialog
				transform translate(1)
				transform transform(-50% , -50%)
				opacity 1
/*TABLE*/
table
	&>tbody
		&>tr
			&>td
				font-size 16px
.table-responsive
	border none
/*SCROLL*/
::-webkit-scrollbar
	width 8px
	height 5px
::-webkit-scrollbar-track
	background-color transparent
	border-radius 10px
::-webkit-scrollbar-thumb
	background-color #AAAAAA
	border-radius 10px
@media (min-width: 768px)
	.navbar
		background-color transparent
		&.navbarcolor
			background-color #000000
			.navbar-brand
				img
					max-width 200px
	.navbar-brand
		img
			max-width 250px
@media (max-width: 1000px)
	.navbar-brand
		small
			display none
@media (max-width: 600px)
	.navbar-brand
		small
			display none	
	#hotel
		.js-flex--start
			display block
		.js-information__right
			max-width 100%	